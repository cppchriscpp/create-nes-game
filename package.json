{
  "name": "create-nes-game",
  "version": "1.0.0",
  "description": "Create and build NES games using ca65/cc65",
  "main": "index.js",
  "bin": {
    "create-nes-game": "./index.js"
  },
  "scripts": {
    "clean-scratchpad": "rm -r ./scratchpad/*",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pkg": "pkg --public . ",
    "build-all": "npm run pkg && npm run package-win && npm run package-linux",
    "package-win": "mv ./dist/create-nes-game-win.exe ./dist/create-nes-game.exe && cd dist && zip create-nes-game.zip create-nes-game.exe",
    "package-linux": "cd dist && tar --transform=\"flags=r;s|create-nes-game-linux|create-nes-game|\" --file=\"create-nes-game.tar.gz\" --mode=\"a+rwx\" -cvz ./create-nes-game-linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cppchriscpp/create-nes-game.git"
  },
  "keywords": [
    "cc65",
    "ca65",
    "nes",
    "compiler",
    "assembler"
  ],
  "author": "cppchriscpp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cppchriscpp/create-nes-game/issues"
  },
  "homepage": "https://github.com/cppchriscpp/create-nes-game#readme",
  "dependencies": {
    "axios": "^0.25.0",
    "eta": "^1.12.3",
    "inquirer": "^8.2.0",
    "node-stream-zip": "^1.15.0"
  },
  "pkg": {
    "targets": [
      "node14-win",
      "node14-linux",
      "node14-darwin"
    ],
    "assets": [
      "generators/**/*.asm",
      "generators/**/*.cfg",
      "generators/**/*.nam",
      "generators/**/*.chr",
      "generators/**/*.pal"
    ],
    "scripts": [
      "generators/**/*.js",
      "commands/**/*.js",
      "generators/*.js",
      "commands/*.js"
    ],
    "outputPath": "./dist"
  },
  "devDependencies": {
    "pkg": "^5.5.2"
  }
}
